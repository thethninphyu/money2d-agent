<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#186483"
    >

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvMessage_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your email or password is wrong ."
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tvMessage_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please check! ..."
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvMessage_1"
        android:textSize="18sp"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/btnMOk"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:text="Ok"
        android:textColor="#ffffff"
        android:background="@drawable/ripple_effect"
        android:layout_below="@+id/tvMessage_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
</RelativeLayout>