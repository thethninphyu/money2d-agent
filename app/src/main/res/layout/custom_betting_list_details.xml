<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="#005588">
    >
    <RelativeLayout
        android:id="@+id/agentLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_supervisor_account_black_24dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bettingListUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="name"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/agentLogo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/bettingListNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:text="number"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/bettingListUserName"
        android:layout_marginTop="25dp"
        android:textStyle="bold" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

