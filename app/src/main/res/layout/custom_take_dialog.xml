<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#186483"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter points..."
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/edt_points"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="8"
        android:singleLine="true"
        android:maxLines="1"
        android:inputType="number"
        android:hint="no: of points"
        android:imeOptions="actionNext"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:textColor="#003377"
        android:textSize="20sp"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/give_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edt_points"
        android:layout_marginTop="12dp"
        android:text="Paid"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/give_check"
        android:layout_centerHorizontal="true"
        >
    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:textColor="#003388"
        />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textColor="#003388"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
</RelativeLayout>